{
    "name": "ngx-event-handler",
    "version": "1.0.1",
    "description": "Easy way to handle page clicks, outside or inside specific elements.",
    "main": "./package/index.js",
    "ngPackage": {
        "dest": "package",
        "lib": {
            "entryFile": "modules/index.ts"
        },
        "whitelistedNonPeerDependencies": [
            "."
        ]
    },
    "scripts": {
        "build": "ng-packagr -p package.json",
        "publish": "ng-packagr -p package.json && npm publish ./package --tag latest",
        "publish-next": "ng-packagr -p package.json && npm publish ./package --tag next",
        "start": "ng serve --port 4201"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Marcelh1983/angular-customer-events.git"
    },
    "keywords": [
        "Angular",
        "click outside",
        "handle events",
        "events",
        "page clicks"
    ],
    "author": "Marcel Hoekstra",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Marcelh1983/angular-customer-events/issues"
    },
    "homepage": "https://github.com/Marcelh1983/angular-customer-events",
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.901.8",
        "@angular/animations": "~9.1.11",
        "@angular/cli": "~9.1.8",
        "@angular/common": "~9.1.11",
        "@angular/compiler": "~9.1.11",
        "@angular/compiler-cli": "~9.1.11",
        "@angular/core": "~9.1.11",
        "@angular/forms": "~9.1.11",
        "@angular/language-service": "~9.1.11",
        "@angular/platform-browser": "~9.1.11",
        "@angular/platform-browser-dynamic": "~9.1.11",
        "@angular/router": "~9.1.11",
        "@mdi/font": "5.3.45",
        "@types/node": "~13.9.1",
        "codelyzer": "~5.2.2",
        "bootstrap": "4.5.0",
        "ng-packagr": "^9.1.5",
        "rxjs": "^6.5.5",
        "tslint": "^5.20.1",
        "typescript": "3.7.5",
        "zone.js": "^0.10.3"
    },
    "peerDependencies": {
        "@angular/common": ">= 6.0.0",
        "@angular/core": ">= 6.0.0",
        "rxjs": ">= 6.3.0"
    }
}
